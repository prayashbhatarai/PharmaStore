@using PharmaStore.Data.Entities;
@using PharmaStore.Modules.Dtos;
@model OrderDto
@{
    ViewData["Title"] = @ViewBag.StockDetails.Medicine.MedicineName;
}
<div class="container-fluid py-5">
    <div class="row px-xl-5">
        <div class="col-lg-5 pb-5">
            <div id="product-carousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner border">
                    <div class="carousel-item active">
                        <img class="w-100 h-100" src="~/uploads/medicine/@ViewBag.StockDetails.Medicine.MedicineImageLink" alt="Image">
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-7 pb-5">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h3 class="font-weight-semi-bold">@ViewBag.StockDetails.Medicine.MedicineName</h3>
            <h3 class="font-weight-semi-bold mb-4">Rs @ViewBag.StockDetails.StockRate</h3>
            @if (ViewBag.StockDetails.Medicine.MedicineGenericName != null)
            {
                <p class="mb-4"><b>Generic Name : </b>@ViewBag.StockDetails.Medicine.MedicineGenericName</p>
            }
            <p class="mb-4">@ViewBag.StockDetails.Medicine.MedicineDescription</p>
            <form enctype="multipart/form-data" asp-controller="shop" asp-action="detail" method="post">
                <input type="hidden" asp-for="StockId" value="@ViewBag.StockDetails.StockId" />
                <span asp-validation-for="StockId" class="text-danger"></span>
                <div class="d-flex align-items-center mb-4 pt-2">
                    <div class="input-group quantity mr-3" style="width: 130px;">
                        <div class="input-group-btn">
                            <button class="btn btn-primary btn-minus" type="button">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                        <input asp-for="OrderQuantity" class="form-control bg-secondary text-center" value="1">
                        <div class="input-group-btn">
                            <button class="btn btn-primary btn-plus" type="button">
                                <i class="fa fa-plus"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="OrderQuantity" class="text-danger"></span>
                <br>
                <input name="prescription" class="form-control-file" type="file">
                <br>
                <button class="btn btn-primary px-3"><i class="fa fa-shopping-cart mr-1"></i> Order</button>
            </form>
        </div>
        <div class="container-fluid pt-5">
            <div class="text-center mb-4">
                <h2 class="section-title px-5"><span class="px-2">Similar Medicines</span></h2>
            </div>
            <div class="row px-xl-5 pb-3">
                @foreach (var item in ViewBag.OtherMedicine)
                {
                    <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                        <div class="card product-item border-0 mb-4">
                            <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                                <img class="img-fluid w-100" src="~/uploads/medicine/@item.Medicine.MedicineImageLink" alt="">
                            </div>
                            <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                                <h6 class="text-truncate mb-3">@item.Medicine.MedicineName</h6>
                                <div class="d-flex justify-content-center">
                                    <h6>Rs @item.StockRate</h6>
                                </div>
                            </div>
                            <div class="card-footer d-flex justify-content-between bg-light border">
                                <a asp-controller="shop" asp-action="detail" asp-route-id="@item.StockId" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>View Detail</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>