@model MedicineDto;
@{
    ViewData["Title"] = "Medicine";
}

<div class="container-fluid">
    <!---------------------------------------------[Main Content Start]---------------------------------------------->
    <div class="card border-0 shadow components-section">
        <div class="card-body">
            <h2 class="h5 mb-4">Medicine Info</h2>
            <form method="POST" enctype="multipart/form-data" asp-controller="medicine" asp-action="add" asp-route-search="@ViewBag.Search" asp-route-pageindex="@ViewBag.PageIndex" asp-route-pagesize="@ViewBag.PageSize" asp-area="Admin">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row align-items-center">
                    <div class="col-md-6 mb-3">
                        <div>
                            <label for="name">Name</label><span style="color:red">*</span>
                            <span asp-validation-for="MedicineName" class="text-danger"></span>
                            <input asp-for="MedicineName" class="form-control" id="name" type="text" placeholder="Medicine Name">
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div>
                            <label for="genericname">Generic Name</label>
                            <span asp-validation-for="MedicineGenericName" class="text-danger"></span>
                            <input asp-for="MedicineGenericName" class="form-control" id="genericname" type="text" placeholder="Medicine Generic Name">
                        </div>
                    </div>
                </div>
                <div class="row align-items-center">
                    <div>
                        <label for="price">Manufacturer</label><span style="color:red">*</span>
                        <span asp-validation-for="ManufacturerId" class="text-danger"></span>
                        <select asp-for="ManufacturerId" class="form-select">
                            <option selected value="@Guid.Empty">Open this select menu</option>
                            @foreach (Manufacturer item in ViewBag.Manufacturers)
                            {
                                <option value="@item.ManufacturerId">@item.ManufacturerName</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="row align-items-center">
                    <div>
                        <label for="price">Category</label><span style="color:red">*</span>
                        <span asp-validation-for="MedicineCategoryId" class="text-danger"></span>
                        <select asp-for="MedicineCategoryId" class="form-select">
                            <option selected value="@Guid.Empty">Open this select menu</option>
                            @foreach (MedicineCategory item in ViewBag.Categories)
                            {
                                <option value="@item.MedicineCategoryId">@item.MedicineCategoryName</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="row align-items-center">
                    <div class="col-md-6 mb-3">
                        <div>
                            <label for="description">Description</label>
                            <span asp-validation-for="MedicineDescription" class="text-danger"></span>
                            <textarea asp-for="MedicineDescription" class="form-control" id="description" rows="4" placeholder="Medicine Description"></textarea>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div>
                            <label for="image">Image</label><span style="color:red">*</span>
                            <input name="image" class="form-control" id="image" type="file">
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">
                    Save
                </button>
                <hr />
                <p><b>Note:</b> <span style="color:red; font-size: 17px;">*</span> Fields are mandatory.</p>
            </form>
        </div>
    </div>
    <!----------------------------------------------[Main Content End]----------------------------------------------->
    <br>
    <partial name="Partial/Component/Footer" />
</div>