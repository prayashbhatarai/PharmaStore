@model PaginationViewModel

<div class="card-footer bg-white px-3 border-0 d-flex flex-column flex-lg-row align-items-center justify-content-between">
    <!-- Display pagination links -->
    <nav aria-label="Page navigation">
        <ul class="pagination">
            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-search="@ViewBag.Search" asp-route-page="@(Model.PageIndex - 1)" asp-route-pagesize="@Model.PageSize">Previous</a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <a class="page-link">Previous</a>
                </li>
            }
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                if (i == Model.PageIndex)
                {
                    <li class="page-item active">
                        <a class="page-link">@i</a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-search="@Model.Search" asp-route-page="@i" asp-route-pagesize="@Model.PageSize">@i</a>
                    </li>
                }
            }
            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-search="@Model.Search" asp-route-page="@(Model.PageIndex + 1)" asp-route-pagesize="@Model.PageSize">Next</a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <a class="page-link">Next</a>
                </li>
            }
        </ul>
    </nav>
    <div class="fw-normal small mt-4 mt-lg-0">Showing <b>@Model.Count</b> out of <b>@Model.TotalItem</b> entries</div>
</div>
