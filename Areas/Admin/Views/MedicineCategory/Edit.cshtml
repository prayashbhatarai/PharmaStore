@model MedicineCategoryDto;
@{
    ViewData["Title"] = "Medicine Category";
}

<div class="container-fluid">
    <!---------------------------------------------[Main Content Start]---------------------------------------------->
    <div class="card border-0 shadow components-section">
        <div class="card-body">
            <h2 class="h5 mb-4">Medicine Category Info</h2>
            <form method="POST" asp-controller="medicinecategory" asp-action="edit" asp-route-search="@ViewBag.Search" asp-route-pageindex="@ViewBag.PageIndex" asp-route-pagesize="@ViewBag.PageSize" asp-area="Admin">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="MedicineCategoryId" type="hidden">
                <div class="row align-items-center">
                    <div class="col-md-12 mb-3">
                        <div>
                            <label for="name">Name</label><span style="color:red">*</span>
                            <span asp-validation-for="MedicineCategoryName" class="text-danger"></span>
                            <input asp-for="MedicineCategoryName" class="form-control" id="name" type="text" placeholder="Category Name">
                        </div>
                    </div>
                </div>
                <div class="row align-items-center">
                    <div class="col-md-12 mb-3">
                        <div>
                            <label for="description">Description</label>
                            <span asp-validation-for="MedicineCategoryDescription" class="text-danger"></span>
                            @* <input asp-for="MedicineCategoryDescription" class="form-control" id="description" type="text" placeholder="Medicine Description">*@
                            <textarea asp-for="MedicineCategoryDescription" class="form-control" id="description" rows="4" placeholder="Category Description"></textarea>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">
                    Save
                </button>
                <hr />
                <p><b>Note:</b> <span style="color:red; font-size: 17px;">*</span> Fields are mandatory.</p>
            </form>
        </div>
    </div>
    <!----------------------------------------------[Main Content End]----------------------------------------------->
    <br>
    <partial name="Partial/Component/Footer" />
</div>